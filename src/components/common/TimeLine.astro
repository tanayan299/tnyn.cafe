---
const {
  title,
  date,
  desc,
  link_title = "More...",
  link_url = null,
} = Astro.props;
---

<div class="flex">
  <div class="education__time">
    <span
      class="w-3 h-3 bg-blue-500 dark:bg-cyan-500 block rounded-full mt-2"
      style={{
        boxShadow:
          "0 0 3px 2px rgba(0, 255, 255, 0.2), 0 0 6px 4px rgba(0, 255, 255, 0.125)",
        zIndex: "-1",
      }}></span>
    <span
      class="education__line bg-blue-500 dark:bg-cyan-500 block h-full w-[2px] translate-x-[4px]"
      style={{
        boxShadow:
          "0 0 3px 2px rgba(0, 255, 255, 0.2), 0 0 6px 4px rgba(0, 255, 255, 0.125)",
        zIndex: "-1",
      }}></span>
  </div>
  <div class="experience__data bd-grid px-3">
    <h3 class="font-semibold text-base mb-1">{title}</h3>
    <span class="font-light text-sm">{date}</span>
    <p class="mt-1 mb-4 text-sm">
      {desc}
      {
        link_url && (
          <a href={link_url} class="link">
            {link_title}
          </a>
        )
      }
    </p>
  </div>
</div>

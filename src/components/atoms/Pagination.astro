---
import { Icon } from "astro-icon";
import { getRelativelink } from "~/utils/permalinks";

export interface Props {
  prevUrl: string;
  nextUrl: string;
  prevText?: string;
  nextText?: string;
}

const {
  prevUrl,
  nextUrl,
  prevText = "Newer posts",
  nextText = "Older posts",
} = Astro.props;
---

{
  (prevUrl || nextUrl) && (
    <div class="container flex">
      <div class="flex flex-row mx-auto container justify-between">
        <a
          href={getRelativelink(prevUrl)}
          class={`btn btn-ghost px-3 mr-2 ${!prevUrl ? "invisible" : ""}`}
        >
          <div class="flex flex-row align-middle">
            <Icon name="tabler:arrow-left" class="w-6 h-6" />
            <p class="ml-2">{prevText}</p>
          </div>
        </a>
        <a
          href={getRelativelink(nextUrl)}
          class={`btn btn-ghost px-3 ${!nextUrl ? "invisible" : ""}`}
        >
          <div class="flex flex-row align-middle">
            <span class="mr-2">{nextText}</span>
            <Icon name="tabler:arrow-right" class="w-6 h-6" />
          </div>
        </a>
      </div>
    </div>
  )
}
